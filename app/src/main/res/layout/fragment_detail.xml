<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_backDetail"
                    android:src="@drawable/ic_back"
                    android:layout_width="60dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:text="Đồng hồ"
                android:textSize="30dp"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:layout_width="160dp"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/txt_detailtitle"
                android:text="aaa"
                android:textSize="30dp"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_product_detail"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <LinearLayout
                android:layout_toRightOf="@+id/image_product_detail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_giaDetail"
                    android:textColor="#ED0F0F"
                    android:gravity="center"
                    android:text="1000"
                    android:textSize="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btn_muahang_detail"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/color_selected_bottom_nv"
                    android:text="Mua hàng"
                    android:layout_marginTop="30dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:id="@+id/txt_detalproduct"
            android:text="aaaaaaaaaaaa"
            android:textSize="25dp"
            android:paddingLeft="30dp"
            android:textColor="@color/text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


</ScrollView>